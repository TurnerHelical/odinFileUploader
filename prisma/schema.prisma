generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  name         String?
  folders      Folder[]
  files        File[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  files     File[]

  @@unique([name, userId])
}

model File {
  id          Int      @id @default(autoincrement())
  displayName String
  storedAs    String
  mimeType    String
  size        Int
  storagePath String?
  url         String?
  createdAt   DateTime @default(now())
  folder      Folder   @relation(fields: [folderId], references: [id])
  folderId    Int
  owner       User     @relation(fields: [userId], references: [id])
  userId      Int

  @@unique([displayName, folderId, userId])
}
